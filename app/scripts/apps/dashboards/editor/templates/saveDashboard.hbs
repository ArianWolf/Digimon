<div class="row">
   <div class="col-md-1">
    <div class="button-save-container">
     <button id='back' class="btn btn-primary btn-animated from-left fa fa-undo" type="button">
      <span>Regresar</span>
     </button>
    <button id='save' class="btn btn-primary btn-animated from-left fa fa-save" type="button">
      <span>Guardar</span>
     </button>
    </div>
  </div>
  <div class="col-md-5 ">
    <div class="panel panel-transparent ">
      <div class="panel-body no-padding">
            <div class="form-group form-group-default required">
              <label>Nombre</label>
              <input type="text" id="name" class="form-control" autocomplete="off" required="true" placeholder="Nombre del Dashboard">
            </div>
      </div>
    </div>
  </div>
  <div class="col-md-5">
    <div class="form-group form-group-default panel-body" >
      <label>Descripción</label>
      <!-- the style has been added while find another way to fix the textarea's height. The class form-group-default has a default height-->
      <textarea   id="description" class="form-control" rows="11" ></textarea>
    </div>
  </div>
   <div class="col-md-1">

  </div>
</div>
